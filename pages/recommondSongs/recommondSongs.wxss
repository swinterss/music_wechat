.recommondSongsContainer .header{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommondSongsContainer .header image{ 
  width: 100%;
  height: 100%;
}
.recommondSongsContainer .header .date{
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -50rpx;
  margin-left: -150rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

/* 列表区域 */
.LastContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.LastContainer .listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changMore{
  float: right;
}

/* 内容 */
.crollList{
  height: calc(100vh - 380rpx);
}
.scrollItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
/* 根据奇偶性用不同背景 */
.scrollItem:nth-child(2n-1){
   /* 奇数标签 */
  background:rgb(235, 236, 234);
}
.scrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}